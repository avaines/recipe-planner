{
  "name": "recipe-planner",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "source ./.env && vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "emulate": "firebase emulators:start --only firestore,auth --import=firebase/dev-data --export-on-exit"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "core-js": "^3.9.1",
    "csv-parse": "^4.15.3",
    "firebase": "^8.3.0",
    "firebase-admin": "^9.5.0",
    "primeicons": "^7.0.0",
    "uuid": "^9.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.0.0",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.12",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/compiler-sfc": "^3.5.13",
    "@babel/eslint-parser": "^7.25.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.29.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
    "parser": "@babel/eslint-parser",
    "requireConfigFile": false
    },
    "rules": {
      "no-console": 0,
      "no-debugger": 0,
      "vue/multi-word-component-names": 0,
      "vue/no-reserved-component-names": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
